<view class="margin-top margin-bottom-xl bg-white order-details-log">
  <view class="order-menu-list solid-bottom">
    <view class="log-list bg-white text-df">
      <text>订单编号：</text>
      <text class="text-gray">{{order.order_code}}</text>
    </view>
    <view class="log-list bg-white text-df">
      <text>下单时间：</text>
      <text class="text-gray">{{order.creation_time}}</text>
    </view>
    <view class="log-list bg-white text-df">
      <text>酒店名称：</text>
      <text class="text-gray">{{order.hotal_name}}</text>
    </view>
    <view class="log-list bg-white text-df">
      <text>酒店地址：</text>
      <text class="text-gray">{{order.hotal_address}}</text>
    </view>
    <view class="log-list bg-white text-df">
      <text>房间编号：</text>
      <text class="text-gray">{{order.room_name}}</text>
    </view>
  </view>
</view>
<view class="canui-foor-fixed bg-white">
  <view class="grid col-4 flex justify-end order-btn-box">
    <view class='margin-tb-sm text-center'>
      <button class='cu-btn round line-gray shadow' wx:if="{{order.status==3||order.status==1}}">删除订单</button>
    </view>
    <view class='margin-tb-sm text-center'wx:if="{{order.status==4}}">
      <button class='cu-btn round line-gray shadow'>取消订单</button>
    </view>
    <view class='margin-tb-sm text-center' wx:if="{{order.status==4}}">
      <button class='cu-btn round line-red shadow' bindtap='payOrder'>付款</button>
    </view>
  </view>
</view>