<view class="padding canui-card-fiex-radius-box"  wx:if="{{order.status==1 || order.status==2 || order.status==5 || order.status==6}}">
  <view class="cu-list menu bg-white">
    <view class="cu-item">
      <view class='content'>
        <view class="canui-xzwz text-df"> 当前设备共有{{rownumsize}}份订单在派送，您是第{{index}}位</view>
      </view>
      <view class='action'>
        <view class='text-grey icon-right'></view>
      </view>
    </view>
  </view>
</view>

<view class="bg-white canui-goods-box">
  <view class="canui-card-order">
    <view class="canui-order-item bg-white" wx:for="{{orderdetail}}" wx:for-item="item" wx:key="unique">
      <view class="cu-list menu menu-avatar">
        <navigator open-type="navigate" class="cu-item" hover-class='none' url="../../good/goods?gooddid={{}}">
          <view class="cu-avatar radius lg">
          <image src='{{item.shop_img}}' mode='aspectFit' lazy-load></image>
        </view>
          <view class='content canui-xzwz tow'>{{item.sp_name}}</view>
          <view class='action'>
            <view class='text-price'>${{item.dollar_price}}</view>
            <view class="text-xs text-right text-gray">x{{item.qty}}</view>
          </view>
        </navigator>
      </view>
    </view>
  </view>

  <view class="text-gray text-sm solid-bottom order-price-log">
    <view class="log-list">
      <text>商品总价</text>
      <text class="text-price canui-text-right">￥{{order.pay_money}}</text>
    </view>
    <view class="log-list bg-white text-df">
      <text>订单总价</text>
      <text class="text-sm text-gray"></text>
      <text class="text-price canui-text-right">￥{{order.pay_money}}</text>
    </view>
  </view>
  <!-- <view class="order-price-log-zj">
    <text>消费积分</text>
    <text class="text-price canui-text-right text-red">￥{{order.pay_money}}</text>
  </view> -->
</view>
<view class="cu-bar bg-white margin-top" wx:if="{{order.status==5}}">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>取货码
  </view>
