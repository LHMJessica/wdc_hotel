<cu-custom isBack="{{true}}" class='text-white'>
  <view slot="content">{{CustomBarText}}</view>
</cu-custom>
<view class="padding canui-card-fiex-radius-box" bindtap='toscan' wx:if="{{address ==null && goods.status == 1}}">
  <view class="cu-list menu bg-white">
    <view class="cu-item">
      <view class='content'>
        <view class="canui-xzwz text-df">点击此处扫码获取您的位置</view>
      </view>
      <view class='action'>
        <view class='text-grey icon-right'></view>
      </view>
    </view>
  </view>
</view>
<view class="padding canui-card-fiex-radius-box" bindtap='chooseaddress' wx:if="{{address ==null && goods.status == 0}}">
  <view class="cu-list menu bg-white">
    <view class="cu-item">
      <view class='content'>
        <view class="canui-xzwz text-df">点击此处选择收货地址</view>
      </view>
      <view class='action'>
        <view class='text-grey icon-right'></view>
      </view>
    </view>
  </view>
</view>
<view class="padding canui-card-fiex-radius-box" wx:if="{{address!=null  && goods.status == 1}}">
  <view class="cu-list menu bg-white">
    <view class="cu-item">
      <view class='content'>
        <view class="canui-xzwz text-df">{{address.hotal_address}}</view>
        <view class='text-gray text-sm'>{{address.floor}}楼{{address.room}}</view>
      </view>
    </view>
  </view>
</view>
<view class="padding canui-card-fiex-radius-box" wx:if="{{address!=null  && goods.status == 0}}">
  <view class="cu-list menu bg-white">
    <view class="cu-item">
      <view class='content'>
        <view class="canui-xzwz text-df">{{address.full_address}}</view>
        <view class='text-gray text-sm'>{{address.contact}} {{address.phone}}</view>
      </view>
    </view>
  </view>
</view>
<view class="canui-card-order">
  <view class="canui-order-item bg-white">
    <view class="cu-list menu menu-avatar">
      <navigator open-type="navigate" class="cu-item" hover-class='none' url="../../good/goods?goodid={{goods.sp_id}}">
        <view class="cu-avatar radius lg">
          <image src='{{goods.sp_img}}' mode='aspectFit' lazy-load></image>
        </view>
        <view class='content canui-xzwz tow'>{{goods.sp_name}}</view>
        <view class='action'>
          <view class='text-price'>{{goods.sale_price}}</view>
          <!-- <view class="text-xs text-right text-gray">x1</view> -->
        </view>
      </navigator>
    </view>
  </view>
</view>

