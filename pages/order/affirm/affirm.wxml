<view class="order-price-log">
  <view class="bg-white log-card">
    <view class="log-list">
      <text>商品数量</text>
      <view class="stepper canui-text-right">
        <!-- 减号 -->
        <text class="sign {{goods.count <= 1 ? 'disabled' : 'normal'}}" bindtap="delCount" data-index="{{index}}">-</text>
        <!-- 数值 -->
        <input class="number" type="number" bindchange="bindManual" value="{{goods.count}}" disabled="disabled" />
        <!-- 加号 -->
        <text class="sign {{goods.count >= 10 ? 'disabled' : 'normal'}}" bindtap="addCount" data-index="{{index}}">+</text>
      </view>
    </view>
    <view class="log-list">
      <text>商品总价</text>
      <text class="text-price canui-text-right dollar-price">{{goods.totalMoney}}</text>
    </view>
    <view class="log-list" wx:if="{{goods.discount<1}}">
      <text>优惠</text>
      <text class="canui-text-right text-red">-<text class='text-price'>{{goods.reduced}}</text></text>
    </view>
    <view class="log-list bg-white text-df">
      <text>订单总价</text>
      <text class="text-price canui-text-right text-red">{{goods.money}}</text>
    </view>
  </view>
</view>
